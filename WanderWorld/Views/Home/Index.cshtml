@model List<Sehir>
@{
    ViewBag.Title = "WanderWorld";
}

<header class="intro-header" style="background-image: url('../../images/wall.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <hr class="fa-th-large">
                    <h1>♦ Wander World ♦</h1>
                    <hr class="fa-th-large">
                    <span class="subheading">Dolaşalım Dünyayı</span>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            @foreach (Sehir sehir in Model)
            {
                <div class="post-preview">
                    <a href="/City/Detail/@sehir.Id">
                        <h2 class="post-title">
                            @sehir.Adi
                        </h2>
                        <h3 class="post-subtitle">
                            @sehir.Slogan
                        </h3>
                    </a>
                  
                </div>
                <hr>
            }
           
        </div>
    </div>
</div>

